    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/details_label"
              android:text="DETAILS"
              style="?android:listSeparatorTextViewStyle"
              android:layout_marginTop="20dp"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">


        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/isuue_details_textView"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:hint="Add description"/>


        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:text="Add event date"
                android:id="@+id/issue_date"/>


        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="DONATE"
                android:id="@+id/issue_donate_button"/>

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="I WILL BE THERE"
                android:id="@+id/i_will_be_there_button"/>

    </LinearLayout>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/comments_label"
              android:text="COMMENTS"
              style="?android:listSeparatorTextViewStyle"
              android:layout_marginTop="20dp"/>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:id="@+id/bottomLin">
            <TextView
                    android:id="@+id/tvAddComm"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Your Comment"
                    android:textSize="16dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp">
            </TextView>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <EditText
                        android:id="@+id/commentInput"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="5dp"/>
                <Button
                        android:id="@+id/addCommentButton"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text=">"
                        android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <ListView
                android:id="@+id/lvComments"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/bottomLin"/>
    </RelativeLayout>
</LinearLayout>
